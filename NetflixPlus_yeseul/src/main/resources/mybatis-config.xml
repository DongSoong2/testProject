<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
 <!-- 위 문장 덕에 아래에 mybatis 기능을 사용 가능 -->
 
 <configuration>

	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>

 	<typeAliases>
 		<typeAlias alias="user" type="com.human.java.domain.UserVO"/>
 		<typeAlias alias="video" type="com.human.java.domain.VideoVO"/>
 		<typeAlias alias="review" type="com.human.java.domain.ReviewVO"/>
 		<typeAlias alias="sum" type="com.human.java.domain.SumVO"/>
 	</typeAliases>
 	
 </configuration>